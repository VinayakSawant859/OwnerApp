<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#8FD4F4"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardElevation="8dp"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/pURL"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:civ_border_color="#000000"
            app:civ_border_width="2dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/childName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/pURL"
            android:fontFamily="@font/secular_one"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/childAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/childName"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/pURL"
            android:fontFamily="@font/secular_one"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/childPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/childAge"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/pURL"
            android:fontFamily="@font/secular_one"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="50dp"
            android:layout_below="@id/childPhone"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editICON"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/update" />

            <ImageView
                android:id="@+id/deleteICON"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/delete" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>